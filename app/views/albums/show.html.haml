%p
  %b= t('albums.form.title')
  = @album.title
%p
  %b= t('albums.form.artist')
  = @album.artist.name
%p
  %b= t('albums.form.desc')
  = @album.description
%p
  %b= t('albums.form.release')
  = @album.release
%p
  %b= t('albums.form.numOfSongs')
  = @album.numOfSongs
%p
  %b= t('albums.form.length')
  = @album.length

%p= t('albums.songs')
%table
  %tbody
    - @album.songs.each do |song|
      %tr{id: "song_#{song.id}"}
        %td= song.title
        %td= song.length
        %td= link_to t('songs.show'), song
        %td= link_to t('songs.edit'), edit_song_path(song)
        %td= link_to t('songs.destroy'), song, :method => :delete, :data => { :confirm => t('confirm') }, :remote => true

%p= link_to t('add_song'), new_song_path(album_id: @album), :class => "add_tuple"

= link_to t('albums.edit'), edit_album_path(@album)
\|
= link_to t('albums.view_all'), albums_path
