= form_for @artist do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label t('artists.form.name')
    = f.text_field :name
  .field
    = f.label t('artists.form.desc')
    = f.text_area :description
  .field
    = f.label t('artists.form.active')
    = f.check_box :active
  .actions
    = f.submit t('save'), class: 'form_submit'
